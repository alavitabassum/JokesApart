<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otp"
    android:background="@color/black">


    <ImageView
        android:id="@+id/otpImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/app_title_otp"
        android:layout_alignBottom="@+id/app_title_otp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="11dp"
        android:src="@mipmap/wink" />

    <TextView
        android:id="@+id/app_title_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="564dp"
        android:fontFamily="sans-serif-condensed"
        android:text="J   kes Apart"
        android:textColor="@color/grey"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/otptext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="392dp"
        android:gravity="center"
        android:text="OTP Verification"
        android:textColor="@color/grey"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/otptext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="361dp"
        android:gravity="center"
        android:text="We will send OTP to your phone number"
        android:textColor="@color/grey"
        android:textSize="20dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="260dp"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/grey" />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="168dp"
        android:text="Send" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/etPhone"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="272dp"
        android:layout_toStartOf="@+id/etPhone"
        android:text="+1"
        android:textColor="@color/grey"
        android:textSize="20dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="182dp"

        android:layout_marginEnd="181dp"
        android:layout_marginBottom="98dp"

        android:visibility="gone"/>


</RelativeLayout>